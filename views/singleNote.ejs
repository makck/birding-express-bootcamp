<%- include('header', {title: `Note Details`}); %>

<div class="container">
  <div class="row">
    <div class="col">
      <div class="card bg-light">
        <div class="card-header">
          Sighting at <%= data.habitat %> on <%= data.date %>
        </div>

        <div class="card-body">
          <h5 class="card-title">Species</h5>
          <p class="card-text mb-4"><%= data[0].species_name %></p>

          <h5 class="card-title">Habitat</h5>
          <p class="card-text mb-4"><%= data[0].habitat %></p>

          <h5 class="card-title">Date</h5>
          <p class="card-text mb-4"><%= data[0].date %></p>

          <h5 class="card-title">Appearance</h5>
          <p class="card-text mb-4"><%= data[0].appearance %></p>

          <h5 class="card-title">Behaviour</h5>
          <p class="card-text mb-4">
            <% data.forEach((element) => { %> <%= element.description %>. <% });
            %>
          </p>

          <h5 class="card-title">Behaviour</h5>
          <p class="card-text mb-4"><%= data[0].behaviour %></p>

          <h5 class="card-title">Vocalisations</h5>
          <p class="card-text mb-4"><%= data[0].vocalisations %></p>

          <h5 class="card-title">Flock Size</h5>
          <p class="card-text mb-4"><%= data[0].flock_size %></p>

          <h5 class="card-title">Created Date</h5>
          <p class="card-text mb-4"><%= data[0].create_time %></p>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('footer'); %>
